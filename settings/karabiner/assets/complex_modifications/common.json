{
  "title": "bnpb な設定",
  "rules": [
    {
      "description": "Ctrl+N, Ctrl+P をそれぞれ ↑, ↓ として扱う",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Space で英かな切り替えを行う",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.US$"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "right_command"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Alfred 起動時にIMEを英数にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_control"
              ]
            },
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.US$"
              }
            }
          ]
        }
      ]
    }
  ]
}
